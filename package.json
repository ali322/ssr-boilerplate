{
  "name": "ssr-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test:client": "jest",
    "test:server": "ava --tap | tap-spec",
    "test": "npm run test:server && npm run test:client",
    "lint": "eslint client server"
  },
  "ava": {
    "files": ["server/test/**/*.js"],
    "failFast": true
  },
  "jest": {
    "setupFiles": ["<rootDir>/client/test/unit/fixture/setup.js"],
    "testMatch": ["**/client/test/unit/spec/**/*.js"],
    "moduleFileExtensions": ["js", "json"],
    "moduleNameMapper": {
      "^@/(.+)$": "<rootDir>/client/$1"
    },
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/client/test/unit/coverage",
    "mapCoverage": true
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "autobind-decorator": "^2.1.0",
    "axios": "^0.17.1",
    "font-awesome": "^4.7.0",
    "handlebars": "^4.0.11",
    "koa": "^2.4.1",
    "koa-body": "^2.5.0",
    "koa-methodoverride": "^2.0.0",
    "koa-router": "^7.3.0",
    "koa-session-minimal": "^3.0.4",
    "koa-static": "^4.0.2",
    "koa-views": "^6.1.2",
    "lodash": "^4.17.4",
    "normalize.css": "^7.0.0",
    "nva-server": "^0.3.223",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-container": "^1.0.26"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "babel-eslint": "^8.0.3",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^4.12.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.5.1",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^21.2.1",
    "moxios": "^0.4.0",
    "raf": "^3.4.0",
    "react-hot-loader": "^3.1.3",
    "react-test-renderer": "^16.2.0",
    "redux-mock-store": "^1.3.0",
    "supertest": "^3.0.0",
    "tap-spec": "^4.1.1"
  }
}
