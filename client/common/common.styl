@import './util'

.container{
    font-dpr(16px)
    background: #FFF
    .header{
        line-height: px2rem(40)
        text-align: center
        background: #F5F5F5
        border-bottom: px2rem(1) solid #DDD
    }
    .header-with-btn{
        position: relative
        .btn{
            position: absolute
            left: px2rem(12)
            top: px2rem(4)
            line-height: px2rem(16)
            font-dpr(16px)
            width: px2rem(32)
            height: px2rem(32)
            border: 0 none
            background: transparent
            cursor: pointer
        }
    }
}

.search-icon{
    background:url(image/search.png) no-repeat 0 0;
    background-size:25%;
}
.refresh-icon{
    background:url(image/refresh.png) no-repeat 50% 50%;
    background-size:50%;
}
